<div class="container-fluid">
  <div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Add New Product</h1>
    <a href="/admin/product" class="btn btn-secondary btn-sm">
      <i class="fas fa-arrow-left"></i>
      Back to Product List
    </a>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="card shadow mb-4">
        <div class="card-header py-3">
          <h6 class="m-0 font-weight-bold text-primary">Product Information</h6>
        </div>
        <div class="card-body">
          <form
            method="POST"
            action="/admin/product/add"
            enctype="multipart/form-data"
          >
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label for="productName">Product Name
                    <span class="text-danger">*</span></label>
                  <input
                    type="text"
                    class="form-control"
                    id="productName"
                    name="productName"
                    placeholder="Enter product name"
                    required
                  />
                  <small class="form-text text-muted">
                    Enter the full name of the product.
                  </small>
                </div>
              </div>

              <div class="col-md-6">
                <div class="form-group">
                  <label for="category">Category/Brand
                    <span class="text-danger">*</span></label>
                  <select
                    class="form-control"
                    id="category"
                    name="category"
                    required
                  >
                    <option value="">-- Select Category --</option>
                    <option value="Nike">Nike</option>
                    <option value="Adidas">Adidas</option>
                    <option value="Puma">Puma</option>
                    <option value="New Balance">New Balance</option>
                    <option value="Converse">Converse</option>
                    <option value="Vans">Vans</option>
                    <option value="Jordan">Jordan</option>
                    <option value="Fila">Fila</option>
                    <option value="Hi-Tech">Hi-Tech</option>
                  </select>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-4">
                <div class="form-group">
                  <label for="size">Size
                    <span class="text-danger">*</span></label>
                  <select class="form-control" id="size" name="size" required>
                    <option value="">-- Select Size --</option>
                    <option value="XS">XS</option>
                    <option value="S">S</option>
                    <option value="M">M</option>
                    <option value="L">L</option>
                    <option value="XL">XL</option>
                    <option value="XXL">XXL</option>
                    <option value="XXXL">XXXL</option>
                  </select>
                </div>
              </div>

              <div class="col-md-4">
                <div class="form-group">
                  <label for="color">Color
                    <span class="text-danger">*</span></label>
                  <input
                    type="text"
                    class="form-control"
                    id="color"
                    name="color"
                    placeholder="Enter color (e.g., White, Black, Red)"
                    required
                  />
                </div>
              </div>

              <div class="col-md-4">
                <div class="form-group">
                  <label for="amount">Price (Amount)
                    <span class="text-danger">*</span></label>
                  <input
                    type="number"
                    class="form-control"
                    id="amount"
                    name="amount"
                    placeholder="Enter price"
                    step="0.01"
                    min="0"
                    required
                  />
                  <small class="form-text text-muted">
                    Enter price in USD ($).
                  </small>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <label for="stock">Stock Quantity</label>
                  <input
                    type="number"
                    class="form-control"
                    id="stock"
                    name="stock"
                    placeholder="Enter stock quantity"
                    min="0"
                    value="0"
                  />
                </div>
              </div>

              {{! <div class="col-md-6">
                <div class="form-group">
                  <label for="productImage">Product Image</label>
                  <input
                    type="file"
                    class="form-control-file"
                    id="productImage"
                    name="productImage"
                    accept="image/*"
                  />
                  <small class="form-text text-muted">
                    Upload product image (JPG, PNG, AVIF).
                  </small>
                </div>
              </div> }}
            </div>

            <div class="form-group">
              <label for="description">Description (Optional)</label>
              <textarea
                class="form-control"
                id="description"
                name="description"
                rows="4"
                placeholder="Enter product description"
              ></textarea>
              <small class="form-text text-muted">
                Detailed description about the product.
              </small>
            </div>

            <hr />

            <div class="form-group mb-0">
              <button type="submit" class="btn btn-primary">
                <i class="fas fa-plus-circle"></i>
                Add Product
              </button>
              <a href="/admin/product" class="btn btn-secondary">
                <i class="fas fa-times"></i>
                Cancel
              </a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>