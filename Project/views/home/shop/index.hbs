<!-- Breadcrumb Start -->
<div class="container-fluid">
  <div class="row px-xl-5">
    <div class="col-12">
      <nav class="breadcrumb bg-light mb-30">
        <a class="breadcrumb-item text-dark" href="#">Home</a>
        <a class="breadcrumb-item text-dark" href="#">Shop</a>
        <span class="breadcrumb-item active">Shop List</span>
      </nav>
    </div>
  </div>
</div>
<!-- Breadcrumb End -->
<!-- Shop Start -->
<div class="container-fluid">
  <div class="row px-xl-5">
    <!-- Shop Sidebar Start -->
    <div class="col-lg-3 col-md-4">
      <!-- Size Start -->
      <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Filter by category</span></h5>
      <div class="bg-light p-4 mb-30">
        <form action="/shop" method="get">
          {{#each categories}}
            <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
              <input
                type="checkbox"
                class="custom-control-input"
                name="category"
                id="{{this.name}}"
                value="{{this.name}}"
                onchange="this.form.submit()"
              />
              <label class="custom-control-label" for="{{this.name}}">{{this.name}}</label>
              <span class="badge border font-weight-normal">{{this.quantity}}</span>
            </div>
          {{/each}}
        </form>
      </div>
      <!-- Size End -->
    </div>
    <!-- Shop Sidebar End -->

    <!-- Shop Product Start -->
    <div class="col-lg-9 col-md-8">
      <div class="row pb-3">
        <div class="col-12 pb-1">
          <div class="d-flex align-items-center justify-content-between mb-4">

          </div>
        </div>
        {{#unless productList}}
          <div class="w-100 d-flex justify-content-center align-items-center h-50">
            <h4>Không có sản phẩm nào!</h4>
          </div>
        {{/unless}}
        {{#each productList}}
          {{#if this.isShow}}
            <div class="col-lg-3 col-md-4 col-sm-6 pb-1">
              <div class="product-item bg-light mb-4">
                <div class="product-img position-relative overflow-hidden">
                  <img class="img-fluid w-100" src="{{this.image}}" alt="" />

                </div>
                <div class="card-item text-center py-4">
                  <a class="h6 text-decoration-none text-truncate" href="/detail/{{this._id}}">{{this.name}}</a>
                  <div class="d-flex align-items-center justify-content-center mt-2">
                    <h5>{{formatPrice this.price}}</h5>
                  </div>
                </div>
              </div>
            </div>
          {{/if}}
        {{/each}}

      </div>
    </div>
  </div>
</div>
<script>
  document.querySelectorAll('.custom-control-input').forEach(checkbox => { checkbox.addEventListener('change', function() { const
  form = this.closest('form'); const formData = new FormData(form); const params = new URLSearchParams();
  formData.getAll('category').forEach(val => { params.append('category', val); }); window.location.href =
  `${window.location.pathname}?${params.toString()}`; }); }); const urlParams = new URLSearchParams(window.location.search); const
  selectedCates = urlParams.getAll('category'); selectedCates.forEach(cate => { const el = document.getElementById(cate); if (el)
  el.checked = true; });
</script>