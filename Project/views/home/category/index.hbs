<div class="container-fluid">
  <div class="row px-xl-5">
    <div class="col-12">
      <nav class="breadcrumb bg-light mb-30">
        <a class="breadcrumb-item text-dark" href="/">Home</a>
        <a class="breadcrumb-item text-dark" href="#">Category</a>
      </nav>
    </div>
  </div>
</div>
<div class="container-fluid pt-5">
  <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4">
    <span class="bg-secondary pr-3">Category</span>
  </h2>
  <div class="row px-xl-5 pb-3">
    {{#each categories}}
      {{#if this.isShow}}
        <div class="col-lg-3 col-md-4 col-sm-6 pb-1">
          <a class="text-decoration-none" href="/shop?category={{this.name}}">
            <div class="cat-item d-flex flex-column align-items-center mb-4 bg-light" style="padding: 30px;">
              <div class="overflow-hidden" style="width: 100px; height: 250px;">
                <img
                  class="img-fluid"
                  src="{{this.logo}}"
                  alt="{{this.name}}"
                  style="object-fit: contain; width: 100%; height: 100%;"
                />
              </div>
              <div class="flex-fill pl-3">
                <h6 class="font-weight-semi-bold m-0">{{this.name}}</h6>
                <small class="text-body">{{this.quantity}} Product</small>
              </div>
            </div>
          </a>
        </div>
      {{/if}}
    {{/each}}
  </div>
</div>