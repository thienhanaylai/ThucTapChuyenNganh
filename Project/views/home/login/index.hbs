<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login | ShoeX</title>

    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css"
      rel="stylesheet"
    />
    <link
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <style>
      body { font-family: 'Roboto', sans-serif; background-color: #f5f5f5;
      height: 100vh; display: flex; align-items: center; justify-content:
      center; } .shoex-card { background: #fff; padding: 40px; border-radius:
      8px; box-shadow: 0 0 20px rgba(0,0,0,0.1); width: 100%; max-width: 450px;
      } .shoex-logo { text-align: center; margin-bottom: 30px; font-weight: 700;
      font-size: 30px; color: #000; } .shoex-logo span { background-color: #000;
      color: #FFD333; padding: 0 10px; margin-right: 5px; } .shoex-logo
      .x-highlight { color: #FFD333; } .btn-shoex { background-color: #FFD333;
      color: #3D464D; font-weight: 700; border: none; width: 100%; padding:
      12px; transition: 0.3s; } .btn-shoex:hover { background-color: #eebc08;
      color: #000; } .form-control:focus { border-color: #FFD333; box-shadow: 0
      0 0 0.2rem rgba(255, 211, 51, 0.25); } .login-link { text-align: center;
      margin-top: 20px; } .login-link a { color: #3D464D; font-weight: 500; }
      .custom-checkbox .custom-control-input:checked ~
      .custom-control-label::before { background-color: #FFD333; border-color:
      #FFD333; color: #000; }
    </style>
  </head>
  <body>

    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-6">
          <div class="shoex-card">
            <div class="shoex-logo">
              <span>SHOE</span><b class="x-highlight">X</b>
            </div>

            <h4 class="text-center mb-4">Welcome Back</h4>
            {{#if error}}
              <div class="alert alert-danger">{{error}}</div>
            {{/if}}
            <form action="/login" method="post">
              <div class="form-group">
                <label>Username</label>
                <input
                  type="text"
                  class="form-control"
                  name="username"
                  placeholder="Username"
                  required
                  autofocus
                />
              </div>

              <div class="form-group">
                <label>Password</label>
                <input
                  type="password"
                  name="password"
                  class="form-control"
                  placeholder="Enter your password"
                  required
                />
              </div>

              <div
                class="d-flex justify-content-between align-items-center mb-4"
              >
                <div class="custom-control custom-checkbox">
                  <input
                    type="checkbox"
                    class="custom-control-input"
                    id="rememberMe"
                  />

                </div>
                {{! <a href="#" style="color: #666; font-size: 0.9rem;">Forgot
                  Password?</a> }}
              </div>

              <button type="submit" class="btn btn-shoex">LOGIN</button>
            </form>

            <div class="login-link">
              <p>Don't have an account? <a href="/register">Sign Up</a></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>