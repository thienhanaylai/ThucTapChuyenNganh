<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register | ShoeX</title>

    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css"
      rel="stylesheet"
    />

    <link
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <style>
      body { font-family: 'Roboto', sans-serif; background-color: #f5f5f5;
      height: 100vh; display: flex; align-items: center; justify-content:
      center; } .shoex-card { background: #fff; padding: 40px; border-radius:
      8px; box-shadow: 0 0 20px rgba(0,0,0,0.1); width: 100%; max-width: 500px;
      } .shoex-logo { text-align: center; margin-bottom: 30px; font-weight: 700;
      font-size: 30px; color: #000; } .shoex-logo span { background-color: #000;
      color: #FFD333; padding: 0 10px; margin-right: 5px; } .shoex-logo
      .x-highlight { color: #FFD333; background: none; padding: 0; margin: 0; }
      .btn-shoex { background-color: #FFD333; color: #3D464D; font-weight: 700;
      border: none; width: 100%; padding: 12px; transition: 0.3s; }
      .btn-shoex:hover { background-color: #eebc08; color: #000; }
      .form-control:focus { border-color: #FFD333; box-shadow: 0 0 0 0.2rem
      rgba(255, 211, 51, 0.25); } .error-msg { display: none; color: #dc3545;
      font-size: 0.9rem; margin-bottom: 15px; text-align: center; min-height:
      20px; background-color: #ffe6e9; border: 1px solid; border-radius: 5px;
      padding: 10px; } .login-link a { color: #3D464D; font-weight: 500; }
    </style>
  </head>
  <body>

    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
          <div class="shoex-card">
            <div class="shoex-logo">
              <span>SHOE</span><b class="x-highlight">X</b>
            </div>

            <h4 class="text-center mb-3">Create an Account</h4>
            <p id="error" class="error-msg">{{error}}</p>
            {{#if error}}
              <div class="alert alert-danger">{{error}}</div>
            {{/if}}
            <form onsubmit="checkForm(event)" action="register" method="post">
              <div class="form-group">
                <label>Full Name</label>
                <input
                  type="text"
                  class="form-control"
                  id="fullName"
                  name="fullname"
                  placeholder="Your Name"
                  value="{{oldData.fullname}}"
                />
              </div>
              <div class="form-group">
                <label>Username</label>
                <input
                  type="text"
                  class="form-control"
                  id="username"
                  name="username"
                  value="{{oldData.username}}"
                  placeholder="Username"
                />
              </div>

              <div class="form-group">
                <label>Email Address</label>
                <input
                  type="text"
                  class="form-control"
                  id="email"
                  name="email"
                  value="{{oldData.email}}"
                  placeholder="name@example.com"
                />
              </div>

              <div class="form-group">
                <label>Phone Number</label>
                <input
                  type="text"
                  class="form-control"
                  id="phone"
                  name="phone"
                  value="{{oldData.phone}}"
                  placeholder="09..."
                />
              </div>
              <div class="form-group">
                <label>Address</label>
                <input
                  type="text"
                  class="form-control"
                  id="address"
                  name="address"
                  placeholder="09 Street,..."
                />
              </div>
              <div class="form-group">
                <label>Role</label>
                <select class="form-control" name="role" id="role">]
                  <option value="user" selected>User</option>
                  <option value="admin">Admin</option>
                </select>

              </div>
              <div class="row">
                <div class="col-md-6 form-group">
                  <label>Password</label>
                  <input
                    type="password"
                    class="form-control"
                    id="password"
                    name="password"
                  />
                </div>
                <div class="col-md-6 form-group">
                  <label>Confirm Password</label>
                  <input
                    type="password"
                    class="form-control"
                    id="confirmPassword"
                    name="confirmPassword"
                  />
                </div>
              </div>

              <button type="submit" class="btn btn-shoex mt-3">REGISTER</button>
            </form>

            <div class="login-link">
              <p>Already have an account?
                <a href="/login">Login here</a></p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script src="/js/validate.js"></script>
  </body>
</html>