<div class="container-fluid pt-5">
  <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span
      class="bg-secondary pr-3"
    >Categories</span></h2>
  <div class="row px-xl-5 pb-3">
    {{#each categories}}
    {{#if this.isShow}}
    <div class="col-lg-3 col-md-4 col-sm-6 pb-1">
      <a class="text-decoration-none" href="/shop?category={{this.name}}">
        <div class="cat-item d-flex align-items-center mb-4">
          <div class="overflow-hidden" style="width: 100px; height: 100px;">
            <img class="img-fluid" src="{{this.logo}}" alt="" />
          </div>
          <div class="flex-fill pl-3">
            <h6>{{this.name}}</h6>
            <small class="text-body">{{this.quantity}} Products</small>
          </div>
        </div>
      </a>
    </div>
    {{/if}}
    {{/each}}
    </div>
  </div>
</div>

<div class="container-fluid pt-5 pb-3">
  <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span
      class="bg-secondary pr-3"
    >Featured Products</span></h2>
  <div class="row px-xl-5">
    {{#each productList}}
    {{#if this.isShow}}
   <div class="col-lg-3 col-md-4 col-sm-6 pb-1">
      <div class="product-item bg-light mb-4">
        <div class="product-img  position-relative overflow-hidden">
          <img class="img-fluid w-100" src="{{this.image}}" alt="" />
        </div>
        <div class="card-item text-center py-4" style="
                    display: flex;
                    flex-direction: column;
                     justify-content: space-around;">
          <a class="h6 text-decoration-none text-truncate" href="/detail/{{this._id}}">{{this.name}}</a>
          <div class="d-flex align-items-center justify-content-center mt-2">
            <h5 style="color: rgb(230, 74, 74);">{{formatPrice this.price}}</h5>
          </div>
      </div>
      </div>
    </div>
    {{/if}}
     {{/each}}
  </div>
</div>

