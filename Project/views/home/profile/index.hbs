  .btn-warning { background-color: #ffd333; border-color: #ffd333; color: #000; } .btn-warning:hover { background-color: #e6be2e;
  color: #000; } .btn-dark { background-color: #000; border-color: #000; color: #fff; } .btn-dark:hover { background-color: #333;
  border-color: #333; } .main-breadcrumb { background: transparent; padding-left: 0; } .form-control:focus { border-color:
  #ffd333; box-shadow: 0 0 0 0.2rem rgba(255, 211, 51, 0.25); }
</style>