<div class="container py-5">
  <div class="row">
    <div class="col-lg-4">
      <div class="card mb-4 shadow-sm border-0">
        <div class="card-body text-center">
          <h5 class="my-3 font-weight-bold">{{user.fullname}}</h5>
          <p class="text-muted mb-1">
            {{#if user.isAdmin}}
              <span class="badge badge-warning text-dark">Admin</span>
            {{else}}
              <span class="badge badge-secondary">Customer</span>
            {{/if}}
          </p>

          <p class="text-muted mb-4 font-italic">
            Created At:
            {{formatDate user.createdAt}}
          </p>

          <div class="d-flex justify-content-center mb-2">
            <a href="/logout" class="btn btn-outline-danger btn-sm">Logout</a>
          </div>
        </div>
      </div>

    </div>

    <div class="col-lg-8">

      {{#if success}}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          {{success}}
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      {{/if}}

      {{#if error}}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          {{error}}
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      {{/if}}

      <div class="card mb-4 shadow-sm border-0">
        <div class="card-header bg-white border-bottom-0 pt-4 pb-0">
          <h5 class="mb-0 font-weight-bold text-uppercase" style="color: #ffd333; letter-spacing: 1px;">
            <span style="color: black; border-bottom: 3px solid #ffd333;">Profile Info</span>
          </h5>
        </div>
        <div class="card-body">
          <form action="/profile/update" method="POST">
            <input type="hidden" name="id" value="{{user._id}}" />

            <div class="row mb-3 align-items-center">
              <div class="col-sm-3">
                <h6 class="mb-0 font-weight-bold">Fullname</h6>
              </div>
              <div class="col-sm-9">
                <input type="text" class="form-control" name="fullname" value="{{user.fullname}}" />
              </div>
            </div>
            <hr />

            <div class="row mb-3 align-items-center">
              <div class="col-sm-3">
                <h6 class="mb-0 font-weight-bold">Email</h6>
              </div>
              <div class="col-sm-9">
                <input type="email" class="form-control bg-light" value="{{user.email}}" readonly />
                <small class="text-muted">Email cannot be changed.</small>
              </div>
            </div>
            <hr />

            <div class="row mb-3 align-items-center">
              <div class="col-sm-3">
                <h6 class="mb-0 font-weight-bold">Phone</h6>
              </div>
              <div class="col-sm-9">
                <input type="text" class="form-control" name="phone" value="{{user.phone}}" />
              </div>
            </div>
            <hr />

            <div class="row">
              <div class="col-sm-12 text-right">
                <button type="submit" class="btn btn-warning px-4 font-weight-bold">Save Info</button>
              </div>
            </div>
          </form>
        </div>
      </div>

      <div class="card mb-4 shadow-sm border-0">
        <div class="card-header bg-white border-bottom-0 pt-4 pb-0">
          <h5 class="mb-0 font-weight-bold text-uppercase" style="color: #ffd333; letter-spacing: 1px;">
            <span style="color: black; border-bottom: 3px solid #ffd333;">Security</span>
          </h5>
        </div>
        <div class="card-body">
          <form action="/profile/changePassword" method="POST">
            <input type="hidden" name="id" value="{{user._id}}" />
            <div class="row mb-3 align-items-center">
              <div class="col-sm-3">
                <h6 class="mb-0 font-weight-bold">Old Password</h6>
              </div>
              <div class="col-sm-9">
                <input type="password" class="form-control" name="oldPassword" placeholder="Enter old password" />
              </div>
            </div>
            <hr />
            <div class="row mb-3 align-items-center">
              <div class="col-sm-3">
                <h6 class="mb-0 font-weight-bold">New Password</h6>
              </div>
              <div class="col-sm-9">
                <input type="password" class="form-control" name="password" placeholder="Enter new password" />
              </div>
            </div>
            <hr />

            <div class="row mb-3 align-items-center">
              <div class="col-sm-3">
                <h6 class="mb-0 font-weight-bold">Confirm Password</h6>
              </div>
              <div class="col-sm-9">
                <input type="password" class="form-control" name="confirmPassword" placeholder="Re-enter new password" />
              </div>
            </div>
            <hr />

            <div class="row">
              <div class="col-sm-12 text-right">
                <button type="submit" class="btn btn-dark px-4 font-weight-bold">Change Password</button>
              </div>
            </div>
          </form>
        </div>
      </div>

    </div>
  </div>
</div>

